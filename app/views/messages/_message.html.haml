.message-box
  .message-box__info
    .message-box__info__UserName
      = message.user.name
    .message-box__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-box__text
    - if message.body.present?
      = message.body
    = image_tag message.image.url if message.image.present?